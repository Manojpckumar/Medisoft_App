<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Add Product"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/proximanovaregular"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Product Name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:fontFamily="@font/proximanovaregular"
                android:paddingLeft="10dp"
                android:background="@drawable/spinner_back"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/proximanovaregular"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Choose Supplier"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:fontFamily="@font/proximanovaregular"
                android:paddingLeft="10dp"
                android:background="@drawable/spinner_back"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Enter Quantity"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@drawable/spinner_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:fontFamily="@font/proximanovaregular"
                        android:background="@android:color/transparent"
                        android:entries="@array/sorts"
                        android:paddingBottom="10dp"
                        android:inputType="number"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Stock"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Pack of"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Purchase rate "
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>






            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="end"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="18"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="end"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="10 Nos"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="end"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:text="Rs. 3,0000.00"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>




            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:fontFamily="@font/proximanovaregular"
            android:contentDescription=""
            android:text="Save"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_baseline_save_24"
            android:pointerIcon="alias"
            android:textColor="@color/white"
            app:layout_anchorGravity="center"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/my_gradient_drawable3"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:padding="15dp"
            android:text="Placed orders"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/my_gradient_drawable3"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:padding="15dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>